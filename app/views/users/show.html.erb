<h2>Your To-Do List</h2>
<p>Username: <%= @user.email %></p>

<div class="row">
		<div class="span6">
				<div class="col-md-4">
				<%= render partial: 'items/item', locals: { user: @user, items: @items } %>
				</div> 
				<% if current_user == @user %>
                    <div class="col-md-4">
                      <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
                    </div>
                <% end %>
			</div>
		</div>
	</div>
</div>

